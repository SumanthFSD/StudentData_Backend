<%- include('../layout.ejs') %>

<section>
    <h2>Allocate Student to Interview</h2>
    <form action="/students/allocate" method="post">
        <label for="studentId">Select Student:</label>
        <select id="studentId" name="studentId" required>
            <% students.forEach(student => { %>
                <option value="<%= student._id %>"><%= student.studentName %> - <%= student.batch %></option>
            <% }); %>
        </select>

        <label for="interviewId">Select Interview:</label>
        <select id="interviewId" name="interviewId" required>
            <% interviews.forEach(interview => { %>
                <option value="<%= interview._id %>"><%= interview.companyName %> - <%= interview.date %></option>
            <% }); %>
        </select>

        <button type="submit">Allocate Student</button>
    </form>
</section>
